<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_grey"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/recycler_folder_image"
        android:layout_width="@dimen/playlist_image_width"
        android:layout_height="@dimen/playlist_image_height"
        android:background="#bababa"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recycler_folder_top_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#1D1D1D"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recycler_folder_bottom_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#757575" />

    </LinearLayout>

</LinearLayout>